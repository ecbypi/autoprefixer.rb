#!/usr/bin/env node

var fs = require("fs");
var path = require("path");
var yaml = require("js-yaml");
var prefixes = require("autoprefixer/data/prefixes.js");

var targetDirectory = path.normalize(path.join(__dirname, "..", "data"));

if ( ! fs.existsSync(targetDirectory) ) {
  fs.mkdir(targetDirectory, function() {});
}

var yamlContent = yaml.safeDump(prefixes, { noRefs: true, condenseFlow: false })

fs.writeFileSync(path.join(targetDirectory, "prefixes.yml"), yamlContent);
